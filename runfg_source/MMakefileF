# Include flags
INC=-I../include
# Library path flags
LIBS=-lgmpxx -lgmp
# Location of libDAI library
LIB=../lib
# Compiler
CC=g++
# Compiler flags
CCFLAGS=-Wno-deprecated -Wall -W -Wextra -fpic -g -static $(INC)

all : runfg_flex

runfg_flex : runfg_flex.cpp $(LIB)/libdai.a
	$(CC) $(CCFLAGS) -o$@ $< $(LIB)/libdai.a $(LIBS)

# CLEAN
########

.PHONY : clean
clean :
	-rm runfg_flex
